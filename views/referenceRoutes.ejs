            currentSelectedConcept = trimHash(trimSlash(currentSelectedConcept));
          }
          $("#conceptHead ").html('<p >  Details: <code>' + currentSelectedConcept + '</code></p>');
          $("#infoDetails").show();
          $('#viewList').show();
