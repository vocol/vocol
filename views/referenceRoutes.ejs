            var key2 = dataSPARQL[i]['o'].value;
            var key2URI = key2;

            //check if object is uri
            if (key2.includes("http://") && key1.includes("seeAlso")) {
              if (key2[key2.length - 1] === ('/'))
                key2 = key2.slice(0, -1);
              key2 = '<a href=' + key2 + '>' + key2 + '</a>';
